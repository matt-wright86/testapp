<div class="container">

  <button class="btn btn-default"><%= link_to 'New Post', new_post_path %></button>
  <hr>
<% @posts.each do |post| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%=link_to post.title, post %></h3>
  </div>
  <div class="panel-body">
    <%= post.body %>
  </div>
</div>
<%end%>
</div>
